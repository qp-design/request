{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "target": "es6",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "declaration": true,
    "types": ["node"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
